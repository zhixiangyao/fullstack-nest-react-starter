{
  "name": "fullstack-nest-react-starter",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.13.0",
  "description": "fullstack nestjs + react + tailwindcss + typescript + prisma starter",
  "author": "zhixiangyao <blueskyzx@icloud.com> <https://github.com/zhixiangyao>",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "scripts": {
    "postinstall": "simple-git-hooks",
    "------------- START -------------": "",
    "start": "pnpm --filter api-service start:prod",
    "------------- DEV -------------": "",
    "dev": "concurrently -c gray,yellow,blue,green,red \"pnpm dev:utils\" \"pnpm dev:markdown\" \"sleep 1 && pnpm dev:dashboard\" \"sleep 1 && pnpm dev:frontend\" \"sleep 1 && pnpm dev:api-service\"",
    "dev:utils": "pnpm --filter utils dev",
    "dev:markdown": "pnpm --filter markdown dev",
    "dev:api-service": "pnpm --filter api-service start:dev",
    "dev:dashboard": "pnpm --filter dashboard dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "------------- BUILD -------------": "",
    "build": "pnpm build:utils && pnpm build:markdown && concurrently -c blue,green,red \"pnpm build:dashboard\" \"pnpm build:frontend\" \"pnpm build:api-service\"",
    "build:utils": "pnpm --filter utils build",
    "build:markdown": "pnpm --filter markdown build",
    "build:api-service": "pnpm --filter api-service build",
    "build:dashboard": "pnpm --filter dashboard build",
    "build:frontend": "pnpm --filter frontend build",
    "------------- DB -------------": "",
    "db:init": "pnpm --filter api-service db:init",
    "db:seed": "pnpm --filter api-service db:seed",
    "db:reset": "pnpm --filter api-service db:reset",
    "------------- LINT -------------": "",
    "lint": "eslint --cache --cache-location node_modules/.cache/eslint/",
    "lint:css": "stylelint \"./**/*.css\" --cache --cache-location node_modules/.cache/stylelint/",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@antfu/eslint-config": "4.17.0",
    "@eslint-react/eslint-plugin": "1.52.3",
    "@types/node": "22.15.27",
    "@typescript-eslint/eslint-plugin": "8.37.0",
    "concurrently": "9.2.0",
    "eslint": "9.31.0",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.20",
    "lint-staged": "16.1.2",
    "simple-git-hooks": "2.13.0",
    "stylelint": "16.21.1",
    "stylelint-config-standard": "38.0.0",
    "stylelint-order": "7.0.0",
    "ts-node": "10.9.2",
    "typescript": "5.8.3"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "eslint --cache --cache-location node_modules/.cache/eslint/"
    ],
    "./**/*.css": [
      "stylelint --cache --cache-location node_modules/.cache/stylelint/"
    ]
  }
}
