{
  "name": "fullstack-nest-react-starter",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.8.0",
  "author": "zhixiangyao <blueskyzx@icloud.com> <https://github.com/zhixiangyao>",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "scripts": {
    "postinstall": "simple-git-hooks",
    "------------- START -------------": "",
    "start": "pnpm --filter backend start:prod",
    "------------- DEV -------------": "",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:backend": "pnpm --filter backend start:dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "------------- BUILD -------------": "",
    "build": "concurrently \"npm run build:frontend\" \"npm run build:backend\"",
    "build:backend": "pnpm --filter backend build",
    "build:frontend": "pnpm --filter frontend build",
    "------------- DB -------------": "",
    "init:db": "pnpm --filter backend db:init",
    "seed:db": "pnpm --filter backend db:seed",
    "------------- LINT -------------": "",
    "lint": "eslint --cache --cache-location node_modules/.cache/eslint/",
    "lint:stylelint": "stylelint \"./**/*.css\" --cache --cache-location node_modules/.cache/stylelint/",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@antfu/eslint-config": "4.12.0",
    "@eslint-react/eslint-plugin": "1.48.4",
    "@types/node": "22.10.1",
    "@typescript-eslint/eslint-plugin": "8.31.0",
    "concurrently": "9.1.0",
    "eslint": "9.25.1",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.20",
    "lint-staged": "15.2.10",
    "simple-git-hooks": "2.12.1",
    "stylelint": "16.11.0",
    "stylelint-config-standard": "36.0.1",
    "stylelint-order": "6.0.4",
    "ts-node": "10.9.2",
    "typescript": "5.7.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "eslint --cache --cache-location node_modules/.cache/eslint/"
    ],
    "./**/*.css": [
      "stylelint --cache --cache-location node_modules/.cache/stylelint/"
    ]
  }
}
